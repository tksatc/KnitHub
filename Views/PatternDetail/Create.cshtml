@model KnitHub.Models.PatternDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Add a New Pattern Variation</h1>

<hr />
<div class="col-md-6" style="float: right; width: 90%">
    <h5 class="text-danger">CAUTION:  For new Variations, create a new Pattern before completing this form.</h5><br /><br />

    <p style="font-size: 20px"; style="color: #4E3883">
        <ul style="color: #4E3883">
            <li>
                Select the pattern name from the drop-down menu.
            </li>
            <li>
                Enter the information requested for your new pattern variation.  Be sure to select today’s date in the last box.
            </li>
            <li>
                Click the Add button.
            </li>
        </ul>
    </p>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatternId" class="control-label">Pattern Name</label>
                <select asp-for="PatternId" class="form-control" asp-items="ViewBag.PatternId"></select>
            </div>
            <div class="form-group">
                <label asp-for="yarnWeightValue" class="control-label"></label>
                <input asp-for="yarnWeightValue" class="form-control" />
                <span asp-validation-for="yarnWeightValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="needleTypeValue" class="control-label"></label>
                <input asp-for="needleTypeValue" class="form-control" />
                <span asp-validation-for="needleTypeValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="needleSizeValue" class="control-label"></label>
                <input asp-for="needleSizeValue" class="form-control" />
                <span asp-validation-for="needleSizeValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="wearableSizeValue" class="control-label"></label>
                <select asp-for="PatternId" class="form-control" asp-items="@ViewBag.WearableSizes"></select>
                <span asp-validation-for="wearableSizeValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Pattern" asp-action="Index">Return to Pattern List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
