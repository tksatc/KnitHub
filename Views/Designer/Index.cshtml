@model IEnumerable<KnitHub.Models.Designer>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Designers</h1>

<p>
    <a asp-action="Create">Add a New Designer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DesignerId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.DesignerId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-controller="Pattern" asp-action="Create">Return to Add a New Pattern</a>
</div>
