@model IEnumerable<KnitHub.Models.Yarn>

@{
    ViewData["Title"] = "Yarn";
}

<h1>Yarn</h1>

<p>
    <a asp-action="Create">Add a Yarn</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["ProducerSortParam"]">Producer</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["YarnNameSortParam"]">Yarn Name</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["FiberTypeSortParam"]">Yarn Type</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["FiberWeightSortParam"]">Yarn Weight</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FiberType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FiberWeight.FiberWeightId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.YarnId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.YarnId">View Collections</a> |
                <a asp-action="Delete" asp-route-id="@item.YarnId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
