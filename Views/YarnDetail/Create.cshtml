@model KnitHub.Models.YarnDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Add a New Collection</h1>

<hr />
<div class="col-md-6" style="float: right; width: 90%">
    <h5 class="text-danger">CAUTION:  For new Collections, create a new Yarn before completing this form.</h5><br /><br />

    <p style="font-size: 20px">
        <ul>
            <li>
                Enter the information requested for your new yarn collection.  Be sure to select today’s date in the last box.
            </li>
            <li>
                Click the Add button.
            </li>
        </ul>
    </p>
</div>
<div class="row">
    <div class="col-md-6" style="float: left; width: 75%">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="YarnId" class="control-label">Yarn</label>
                <select asp-for="YarnId" class ="form-control" asp-items="ViewBag.YarnId"></select>
            </div>
            <div class="form-group">
                <label asp-for="YarnColor" class="control-label"></label>
                <input asp-for="YarnColor" class="form-control" />
                <span asp-validation-for="YarnColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YarnColorCode" class="control-label"></label>
                <input asp-for="YarnColorCode" class="form-control" />
                <span asp-validation-for="YarnColorCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YarnColorLot" class="control-label"></label>
                <input asp-for="YarnColorLot" class="form-control" />
                <span asp-validation-for="YarnColorLot" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityOfSkeins" class="control-label"></label>
                <input asp-for="QuantityOfSkeins" class="form-control" />
                <span asp-validation-for="QuantityOfSkeins" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateUpdated" class="control-label"></label>
                <input asp-for="DateUpdated" class="form-control" />
                <span asp-validation-for="DateUpdated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Yarn" asp-action="Index">Return to Yarn List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
